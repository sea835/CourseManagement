@model CourseManagement.Core.ViewModels.VideoViewModel

@{
    ViewData["Title"] = "Edit Video Information";
}
<a href="javascript:history.back()" class="back-button">
    <i class="fas fa-arrow-left pe-2"></i> Quay lại
</a>
<h2 class="mb-4">Edit Video Information</h2>

<form asp-action="UploadAndCreateVideo" asp-controller="Video" asp-area="Video" enctype="multipart/form-data"
      method="post">
    <input type="hidden" asp-for="LessonId"/>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Video Title</label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Duration" class="form-label">Duration</label>
        <input asp-for="Duration" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Provider" class="form-label">Provider</label>
        <input asp-for="Provider" class="form-control"/>
    </div>

    <div class="mb-4">
        <label class="form-label fw-semibold">Course</label>
        <select asp-for="CourseTitle" class="form-control shadow rounded-3 border-0 px-3 py-2" id="Course">
        </select>
        <span asp-validation-for="CourseTitle" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <label asp-for="ChapterTitle" class="form-label fw-semibold">Chapter</label>
        <select asp-for="ChapterTitle" class="form-control shadow rounded-3 border-0 px-3 py-2" id="Chapter">
        </select>
        <span asp-validation-for="ChapterTitle" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <label asp-for="LessonId" class="form-label fw-semibold">Lesson</label>
        <select asp-for="LessonId" class="form-control shadow rounded-3 border-0 px-3 py-2" id="Lesson">
        </select>
        <span asp-validation-for="LessonId" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload video (.mp4)</label>
        <input type="file" name="videoFile" class="form-control" accept="video/*"/>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


@section Scripts
{
    <script>
        $("#Course").select2({
            placeholder: "Select a course",
            ajax: {
                url: '@Url.Action("GetAllCoursesSelect2", "Course", new { area = "Course" })',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        searchTerm: params.term
                    };
                },
                processResults: function (data) {
                    return {
                        results: data.results.data
                    };
                },
                cache: true
            },
        });

        $('#Course').on('change', function () {
            // Xóa Chapter hiện tại
            $('#Chapter').val(null).trigger('change');
        });

        $("#Chapter").select2({
            placeholder: "Select a chapter",
            ajax: {
                url: '@Url.Action("GetAllChaptersByCourseIdSelect2", "Chapter", new { area = "Chapter" })',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        searchTerm: params.term,
                        courseId: $('#Course').val()
                    };
                },
                processResults: function (data) {
                    return {
                        results: data.data
                    };
                },
                cache: true
            },
        });

        $('#Chapter').on('change', function () {
            $('#Lesson').val(null).trigger('change');
        })

        $("#Lesson").select2({
            placeholder: "Select a lesson",
            ajax: {
                url: "@Url.Action("GetAllLessonsByChapterIdSelect2", "Lesson", new { area = "Lesson" })",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        searchTerm: params.term,
                        chapterId: $('#Chapter').val()
                    }
                },
                processResults: function (data) {
                    return {
                        results: data.data
                    }
                }
            }
        })

        $('form').on('submit', function () {
            $('#Lesson').trigger('change'); // Cập nhật Select2 value
            const lessonId = $('#Lesson').val();

            // Nếu vì lý do gì mà Select2 không gán giá trị cho <select> thực sự,
            // thì ép thêm input hidden để chắc chắn server nhận được
            if (!$('select[name="LessonId"]').val()) {
                $('<input>').attr({
                    type: 'hidden',
                    name: 'LessonId',
                    value: lessonId
                }).appendTo(this);
            }
        });
    </script>
    <style>
        .hover-scale {
            transition: transform 0.15s cubic-bezier(.4, 0, .2, 1);
        }

        .hover-scale.scale-up {
            transform: scale(1.06);
            box-shadow: 0 8px 24px rgba(80, 80, 200, 0.13);
        }

        .card {
            transition: box-shadow .2s;
        }

        .card:hover {
            box-shadow: 0 8px 32px rgba(80, 80, 200, 0.14);
        }

        .form-control:focus {
            box-shadow: 0 0 6px 1px #4299e1;
            border-color: #4299e1;
        }

        .form-check-input:focus {
            box-shadow: 0 0 0 0.2rem rgba(66, 153, 225, .25);
        }

        .btn-primary {
            background: linear-gradient(90deg, #4299e1 0, #2462c7 100%);
            border: none;
        }

        .btn-primary:hover, .btn-primary:focus {
            background: linear-gradient(90deg, #2462c7 0, #4299e1 100%);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            background-color: #6e8efb;
            color: white;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            margin-top: 1rem;
            border: none;
            cursor: pointer;
        }
    </style>
}
