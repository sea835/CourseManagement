<div class="container">
    <table id="category-table" class="table table-striped table-bordered table-hover mx-auto"
           style="table {
                margin-left: auto;
                margin-right: auto;
            }">
        <thead>
        <tr>
            <th>CategoryID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Icon</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@section Scripts
{
    <script>
        $("#category-table").DataTable({
            "ajax": {
                "url": "@Url.Action("GetAllCategories")",  // Đảm bảo đường dẫn đúng
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {"data": "categoryId"},          // categoryId
                {"data": "name"},                // name
                {"data": "description"},         // description
                {
                    "data": "icon",
                    // "render": function (data, type, row) {
                    //     return `<i class="fas ${data[0]} ${data[1]}" style="width: 50px; height: 50px;">`;
                    // }
                },                              
            ]
        });
    </script>
}