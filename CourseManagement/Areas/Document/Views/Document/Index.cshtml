<div class="container">
    <table id="document-table" class="table table-striped table-bordered table-hover mx-auto"
           style="table {
                margin-left: auto;
                margin-right: auto;
            }">
        <thead>
        <tr>
            <th>DocumentId</th>
            <th>LessonId</th>
            <th>Title</th>
            <th>FilePath</th>
            <th>FileType</th>
            <th>SizeInByte</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@section Scripts
{
    <script>
        $("#document-table").DataTable({
            "ajax": {
                "url": "@Url.Action("GetAllDocuments")",  // Đảm bảo đường dẫn đúng
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {"data": "documentId"},            // documentId
                {"data": "lessonId"},              // lessonId
                {"data": "title"},                 // title
                {"data": "filePath"},              // filePath
                {"data": "fileType"},              // fileType
                {"data": "sizeInByte"}             // sizeInByte
            ]
        });
    </script>
}