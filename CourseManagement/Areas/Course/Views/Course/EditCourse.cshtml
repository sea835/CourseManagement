@model CourseManagement.Models.EditCourseViewModel

@{
    ViewData["Title"] = "Edit Course";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="mb-4">
                <a href="@Url.Action("Index", "Course")"
                   class="btn btn-outline-secondary btn-lg rounded-pill shadow-sm hover-scale">
                    <i class="fas fa-arrow-left me-2"></i>Back to Courses
                </a>
            </div>
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-warning text-dark rounded-top-4">
                    <h2 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i>Edit Course</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditCourse" method="post" enctype="multipart/form-data" autocomplete="off">
                        <input asp-for="CourseId" class="form-control" type="hidden"/>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control form-control-lg shadow-sm"
                                   placeholder="Course title..."/>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="2"
                                      placeholder="Short description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullDescription" class="form-label fw-semibold">Full Description</label>
                            <textarea asp-for="FullDescription" class="form-control shadow-sm" rows="4"
                                      placeholder="Full description"></textarea>
                            <span asp-validation-for="FullDescription" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Level" class="form-label fw-semibold"></label>
                                <input asp-for="Level" class="form-control shadow-sm"
                                       placeholder="e.g. Beginner, Intermediate"/>
                                <span asp-validation-for="Level" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Duration" class="form-label fw-semibold"></label>
                                <input asp-for="Duration" type="number" class="form-control shadow-sm" min="1"
                                       placeholder="Duration in hours"/>
                                <span asp-validation-for="Duration" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Language" class="form-label fw-semibold"></label>
                                <input asp-for="Language" class="form-control shadow-sm" placeholder="Language"/>
                                <span asp-validation-for="Language" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ThumbnailUrl" class="form-label fw-semibold"></label>
                                <input asp-for="ThumbnailUrl" class="form-control shadow-sm" placeholder="Image URL"/>
                                <span asp-validation-for="ThumbnailUrl" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-semibold"></label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control shadow-sm"
                                       placeholder="e.g. 0.00"/>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 d-flex align-items-center mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsFree" type="checkbox" class="form-check-input" id="isFreeCheck"/>
                                    <label asp-for="IsFree" class="form-check-label ms-2">Is Free</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AuthorName" class="form-label fw-semibold">Author Name</label>
                            <input asp-for="AuthorName" class="form-control shadow-sm" placeholder="Author name"/>
                            <span asp-validation-for="AuthorName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <input type="hidden" id="CurrentCategoryId" value="@Model.CategoryId"/>
                            <input type="hidden" id="CurrentCategoryName" value="@Model.CategoryName"/>
                            <label asp-for="CategoryId" class="form-label fw-semibold">Category</label>
                            <select name="CategoryId" class="form-control shadow rounded-3 border-0 px-3 py-2"
                                    id="Category">
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill shadow-sm hover-scale">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        // Hiệu ứng hover cho button
        document.querySelectorAll('.hover-scale').forEach(btn => {
            btn.onmouseenter = () => btn.classList.add('scale-up');
            btn.onmouseleave = () => btn.classList.remove('scale-up');
        });

        $(document).ready(function () {
            var selectedCategoryId = $('#CurrentCategoryId').val();
            var selectedCategoryName = $('#CurrentCategoryName').val();

            if (selectedCategoryId && selectedCategoryName) {
                $('#Category').append(
                    $('<option>', {
                        value: selectedCategoryId,
                        text: selectedCategoryName,
                        selected: true
                    })
                );
            }
        });


        $("#Category").select2({
            placeholder: "Select a category",
            ajax: {
                url: '@Url.Action("GetAllCategoriesSelect2", "Category", new { area = "Category" })',
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        searchTerm: params.term
                    };
                },
                processResults: function (data) {
                    // console.log(data)
                    return {
                        results: data.results
                    };
                },
                cache: true
            },
        });
    </script>
    <style>
        .hover-scale {
            transition: transform 0.15s cubic-bezier(.4, 0, .2, 1);
        }

        .hover-scale.scale-up {
            transform: scale(1.06);
            box-shadow: 0 8px 24px rgba(255, 193, 7, .18);
        }

        .card {
            transition: box-shadow .2s;
        }

        .card:hover {
            box-shadow: 0 8px 32px rgba(255, 193, 7, .16);
        }

        .form-control:focus {
            box-shadow: 0 0 6px 1px #f7b924;
            border-color: #f7b924;
        }

        .form-check-input:focus {
            box-shadow: 0 0 0 0.2rem rgba(247, 185, 36, .15);
        }

        .btn-warning {
            background: linear-gradient(90deg, #ffe082 0, #ffc107 100%);
            border: none;
            color: #333;
        }

        .btn-warning:hover, .btn-warning:focus {
            background: linear-gradient(90deg, #ffc107 0, #ffe082 100%);
        }
    </style>
}
