<div class="container">
    <table id="course-table" class="table table-striped table-bordered table-hover mx-auto"
           style="table {
                margin-left: auto;
                margin-right: auto;
            }">
        <thead>
        <tr>
            <th>CourseId</th>
            <th>Title</th>
            <th>Description</th>
            <th>FullDescription</th>
            <th>Level</th>
            <th>Duration</th>
            <th>Language</th>
            @* <th>ThumbnailUrl</th> *@
            <th>Price</th>
            <th>IsFree</th>
            <th>AuthorName</th>
            <th>CategoryId</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>


@section Scripts
{
    <script>
        $("#course-table").DataTable({
            "ajax": {
                "url": "@Url.Action("GetAllCourses")",  // Đảm bảo đường dẫn đúng
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {"data": "courseId"},            // courseId
                {"data": "title"},               // title
                {"data": "description"},         // description
                {"data": "fullDescription"},     // fullDescription
                {"data": "level"},               // level
                {"data": "duration"},            // duration
                {"data": "language"},            // language
                // {"data": "thumbnailUrl"},        // thumbnailUrl
                {"data": "price"},               // price
                {"data": "isFree"},              // isFree
                {"data": "authorName"},          // authorName
                {"data": "categoryId"},          // categoryId
            ]
        });
    </script>
}
