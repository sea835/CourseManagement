<h2>Courses</h2>
<hr>
<a href="@Url.Action("CreateCourse")"
   class="btn btn-success btn-lg rounded-pill d-inline-flex align-items-center gap-2 shadow-lg custom-create-btn"
   style="font-weight: 600; letter-spacing: 0.5px;">
    <i class="fa-solid fa-plus fa-lg"></i> Create Course
</a>
<div class="container">
    <div class="">
        <table id="course-table"
               class="table table-striped table-hover table-bordered align-middle shadow-sm rounded-3 bg-white">
            <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>FullDescription</th>
                <th>Level</th>
                <th>Duration</th>
                <th>Language</th>
                <th>Price</th>
                <th>AuthorName</th>
                <th>Category</th>
                <th style="text-align:center;">Actions</th>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="modal fade modern-modal" tabindex="-1" role="dialog" id="delete-conform" aria-labelledby="deleteModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 shadow-lg rounded-4 animate-scale">
            <div class="modal-header py-3 px-4"
                 style="background: linear-gradient(90deg,#ef4444 0%,#f59e42 100%); border-top-left-radius: 1.2rem; border-top-right-radius: 1.2rem;">
                <h5 class="modal-title text-white d-flex align-items-center gap-2" id="deleteModalLabel">
                    <i class="fa-solid fa-triangle-exclamation fa-lg"></i> Warning
                </h5>
                <button type="button" class="btn-close btn-close-white ms-2" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-4 bg-light rounded-bottom-4 text-center">
                <div class="mb-3">
                    <i class="fa-solid fa-circle-exclamation fa-3x text-danger mb-2"></i>
                    <p class="mb-2" style="font-size:1.13rem; font-weight:500; color:#222;">
                        Are you sure you want to delete this course?
                    </p>
                    <p class="mb-0 text-muted" style="font-size:0.98rem;">
                        This action cannot be undone.
                    </p>
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-danger btn-lg rounded-pill px-4 shadow-sm hover-scale"
                        id="btnConfirmDelete">
                    <i class="fa-solid fa-trash me-1"></i> Delete
                </button>
                <button type="button" class="btn btn-outline-secondary btn-lg rounded-pill px-4 shadow-sm hover-scale"
                        data-bs-dismiss="modal">
                    <i class="fa-solid fa-xmark me-1"></i> Close
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modern-modal" id="fullDescModal" tabindex="-1" aria-labelledby="fullDescModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 animate-scale">
            <div class="modal-header py-3 px-4"
                 style="background: linear-gradient(90deg,#6366f1 0%,#06b6d4 100%); border-top-left-radius: 1.2rem; border-top-right-radius: 1.2rem;">
                <h5 class="modal-title text-white d-flex align-items-center gap-2" id="fullDescModalLabel">
                    <i class="fa-solid fa-align-left fa-lg"></i> Full Description
                </h5>
                <button type="button" class="btn-close btn-close-white ms-2" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body px-4 py-4 bg-light rounded-bottom-4" id="fullDescContent"
                 style="white-space:pre-line; font-size:1.17rem; line-height:1.7;"></div>
        </div>
    </div>
</div>
<style>
    /* Success: Xanh lá */
    #toast-container > .toast-success {
        background-color: #00c853 !important; /* xanh lá tươi */
        color: #fff !important;
    }

    /* Error: Đỏ */
    #toast-container > .toast-error {
        background-color: #d32f2f !important; /* đỏ đậm */
        color: #fff !important;
    }

    /* Info: Xanh dương */
    #toast-container > .toast-info {
        background-color: #1976d2 !important; /* xanh dương đậm */
        color: #fff !important;
    }

    /* Warning: Cam */
    #toast-container > .toast-warning {
        background-color: #ff9800 !important; /* cam đậm */
        color: #fff !important;
    }

</style>


@section Scripts
{
    <script>
        $("#course-table").DataTable({
            "ajax": {
                "url": "@Url.Action("GetAllCourses")",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {"data": "title"},               // title
                {
                    "data": "description",
                    "render": function (data, type, row) {
                        if (!data) return "";
                        if (data.length > 40) {
                            const shortText = data.substring(0, 40).replace(/"/g, '&quot;') + '...';
                            return `
                                    <span>
                                        ${shortText}
                                        <a href="#" class="read-more-link" 
                                           data-bs-toggle="modal" 
                                           data-bs-target="#fullDescModal" 
                                           data-full="${data.replace(/"/g, '&quot;')}">
                                            More
                                        </a>
                                    </span>
                                `;
                        } else {
                            return data;
                        }
                    }
                },         // description
                {
                    "data": "fullDescription",
                    "render": function (data, type, row) {
                        if (!data) return "";
                        if (data.length > 40) {
                            const shortText = data.substring(0, 40).replace(/"/g, '&quot;') + '...';
                            return `
                                    <span>
                                        ${shortText}
                                        <a href="#" class="read-more-link" 
                                           data-bs-toggle="modal" 
                                           data-bs-target="#fullDescModal" 
                                           data-full="${data.replace(/"/g, '&quot;')}">
                                            More
                                        </a>
                                    </span>
                                `;
                        } else {
                            return data;
                        }
                    }
                },
                {"data": "level"},               // level
                {"data": "duration"},            // duration
                {"data": "language"},            // language
                {"data": "price"},               // price
                {"data": "authorName"},          // authorName
                {"data": "category"},          // categoryId
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return `
                                <div class="flex flex-row justify-between items-center space-x-2">
                                    <a href="/Course/Course/EditCourse/${row.courseId}"
                                       style="font-size: 25px; color: Dodgerblue;"
                                       class="text-decoration-none hover:text-blue-700 transition-colors duration-200"
                                       title="Edit">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                    <a href="#"
                                       class="hover:text-red-600 transition-colors duration-200"
                                       data-bs-toggle="modal" 
                                       data-bs-target="#delete-conform"
                                       data-course-id="${row.courseId}"
                                       style="font-size: 25px; color: tomato;"
                                       title="Delete">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                                `;
                    },
                }
            ]
        });

        $('#delete-conform').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Nút vừa click
            var courseId = button.data('course-id');
            // Gán id vào nút xác nhận trong modal
            $('#btnConfirmDelete').data('course-id', courseId);
        });

        $('#btnConfirmDelete').on('click', function () {
            var courseId = $(this).data('course-id');
            if (!courseId) return;
            // Gọi AJAX để xóa
            $.ajax({
                url: '@Url.Action("DeleteCourse", "Course")/' + courseId,
                type: 'POST',
                success: function (result) {
                    // Xóa thành công: reload hoặc xóa dòng khỏi table bằng JS
                    location.reload();
                },
                error: function () {
                    alert('Delete failed!');
                }
            });
        });

        $(document).on('click', '.read-more-link', function (e) {
            e.preventDefault();
            var full = $(this).data('full');
            $('#fullDescContent').text(full);
        });

        $(function () {
            @if (TempData["ToastMessage"] != null && TempData["ToastType"] != null)
            {
                <text>
                    toastr["@TempData["ToastType"]"]('@TempData["ToastMessage"]');
                </text>
            }
        });
    </script>
}
