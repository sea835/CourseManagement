@{
    ViewData["Title"] = "Home Page";
}

<!-- Banner Section -->
<div class="position-relative bg-gradient" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); min-height: 50vh; display: flex; align-items: center;">
    <div class="container text-center text-white py-5">
        <h1 class="display-2 fw-bold animate__animated animate__fadeInDown mb-3" style="letter-spacing: 2px;">
            <i class="fas fa-graduation-cap me-2"></i>Course Management Pro
        </h1>
        <p class="lead animate__animated animate__fadeIn animate__delay-1s mb-4" style="font-size: 1.4rem;">
            Quản lý khoá học, giáo viên, học viên — nhanh chóng, thông minh, chuyên nghiệp.
        </p>
        <a href="@Url.Action("Index", "Course", new { area = "Course" })"
           class="btn btn-lg btn-warning rounded-pill shadow px-5 py-3 animate__animated animate__fadeInUp animate__delay-2s btn-glow">
            <i class="fas fa-book-open me-2"></i>Quản lý khoá học ngay
        </a>
    </div>
</div>

<!-- Feature Section -->
<div class="container my-5">
    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 feature-card animate__animated animate__fadeInUp">
                <div class="card-body text-center py-5">
                    <i class="fas fa-layer-group fa-3x mb-4 text-primary"></i>
                    <h4 class="fw-bold mb-2">Quản lý khoá học</h4>
                    <p>Thêm, sửa, xoá, tìm kiếm khoá học dễ dàng, hiển thị trực quan, sắp xếp logic.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 feature-card animate__animated animate__fadeInUp animate__delay-1s">
                <div class="card-body text-center py-5">
                    <i class="fas fa-users fa-3x mb-4 text-success"></i>
                    <h4 class="fw-bold mb-2">Quản lý học viên</h4>
                    <p>Quản lý thông tin học viên, lịch sử học tập, đăng ký khoá học và điểm số.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-lg border-0 h-100 feature-card animate__animated animate__fadeInUp animate__delay-2s">
                <div class="card-body text-center py-5">
                    <i class="fas fa-chalkboard-teacher fa-3x mb-4 text-warning"></i>
                    <h4 class="fw-bold mb-2">Quản lý giáo viên</h4>
                    <p>Dễ dàng phân quyền, quản lý giảng viên, kiểm soát chất lượng giảng dạy.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About/CTA Section -->
<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-lg-7 mb-4 mb-lg-0">
            <div class="p-4 rounded-4 shadow-lg bg-white animate__animated animate__fadeInLeft">
                <h2 class="fw-bold mb-3">Tại sao chọn Course Management Pro?</h2>
                <ul class="fs-5">
                    <li>Giao diện trực quan, tối ưu trải nghiệm người dùng</li>
                    <li>Hiệu suất xử lý mạnh, realtime notification</li>
                    <li>Bảo mật và phân quyền linh hoạt</li>
                    <li>Tích hợp thống kê, báo cáo chi tiết</li>
                    <li>Hỗ trợ mobile và desktop</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-5 text-center animate__animated animate__fadeInRight">
            <img src="https://img.freepik.com/free-vector/online-tutorials-concept_52683-37480.jpg" alt="About"
                 class="rounded-4 shadow-lg" style="max-width: 100%;"/>
        </div>
    </div>
</div>

<!-- Toastr notification (Demo) -->
<button id="demo-toast" class="btn btn-outline-primary rounded-pill shadow mb-5">
    <i class="fas fa-bolt me-2"></i>Dùng thử Toastr Notification
</button>

@section Scripts {
    <script>
        // Nút demo notification
        $('#demo-toast').click(function() {
            toastr.success('Bạn vừa nhận được thông báo cực vip!', 'Welcome', { timeOut: 2500 });
        });

        // Nếu có TempData thì hiển thị thông báo
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                toastr.success('@TempData["SuccessMessage"]');
            </text>
        }
    </script>
    <style>
        .btn-glow {
            box-shadow: 0 0 12px 2px #ffe082;
            transition: box-shadow 0.3s;
        }
        .btn-glow:hover, .btn-glow:focus {
            box-shadow: 0 0 32px 6px #ffe082;
        }
        .feature-card {
            transition: transform .2s, box-shadow .2s;
        }
        .feature-card:hover {
            transform: translateY(-8px) scale(1.03);
            box-shadow: 0 12px 32px rgba(60,60,200,0.14);
        }
        .bg-gradient {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%) !important;
        }
        /* Toastr Custom màu */
        #toast-container > .toast-success { background-color: #00b894 !important; }
        #toast-container > .toast-error { background-color: #d63031 !important; }
        #toast-container > .toast-info { background-color: #0984e3 !important; }
        #toast-container > .toast-warning { background-color: #fdcb6e !important; color: #2d3436 !important;}
    </style>
}
